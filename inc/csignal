#pragma once

#if ywstd_is_exported
extern "C" {

#define SIG_DFL ((signal_handler*)0)
#define SIG_IGN ((signal_handler*)1)
#define SIG_GET ((signal_handler*)2)
#define SIG_SGE ((signal_handler*)3)
#define SIG_ACK ((signal_handler*)4)
#define SIG_ERR ((signal_handler*)-1)

#define SIGINT 2
#define SIGILL 4
#define SIGFPE 8
#define SIGSEGV 11
#define SIGTERM 15
#define SIGBREAK 21
#define SIGABRT 22

using signal_handler = void(__cdecl)(int);

signal_handler* __cdecl signal(int, signal_handler*);
int __cdecl raise(int);
}
#endif

export namespace std {

using sig_atomic_t = int;
using signal_handler = void(__cdecl)(int);
inline signal_handler* signal(int Sig, signal_handler* Func) { return ::signal(Sig, Func); }
inline int raise(int Sig) { return ::raise(Sig); }
}
