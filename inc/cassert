#pragma once

#include "yvals_core.h"

#if ywstd_is_exported
extern "C" void __cdecl _wassert(const wchar_t*, const wchar_t*, unsigned);
#ifdef NDEBUG
#define assert(expression) ((void)0)
#else
#define assert(expression) (void)((!!(expression)) || (_wassert(L#expression, __FILEW__, (unsigned)(__LINE__)), 0))
#endif
#endif
